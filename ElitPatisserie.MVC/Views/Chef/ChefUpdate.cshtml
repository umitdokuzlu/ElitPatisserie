@model Chef
@{
    ViewData["Title"] = "ChefUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="Chef" asp-action="ChefUpdate" enctype="multipart/form-data" method="post" style="width:100%">
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        <label for="exampleFormControlInput1">Şef Adı ve Soyadı</label>
        <input asp-for="Name" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Şef adı ve soyadını giriniz..">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Şef Unvanı</label>
        <input asp-for="Title" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Şef unvanını giriniz..">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Şef Resmi</label>
        <input asp-for="Picture" class="form-control" required type="file" id="formFile">
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Şef FacebookURL</label>
        <input asp-for="FacebookUrl" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Şef facebook adres linkini giriniz..">
        <span asp-validation-for="FacebookUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Şef TwitterURL</label>
        <input asp-for="TwitterUrl" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Şef twitter adres linkini giriniz..">
        <span asp-validation-for="TwitterUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Şef Instagra</label>
        <input asp-for="InstagramUrl" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Şef instagram adres linkini giriniz..">
        <span asp-validation-for="InstagramUrl" class="text-danger"></span>
    </div>
    <button class="btn btn-success">Güncelle</button>
</form>
