@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Ürünler Listesi:</h1>
    <a href="/Product/ProductAdd/" class="btn btn-success" style="margin-left:10px;">Yeni Ürün Ekle</a>
</div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Ürün Resmi</th>
            <th scope="col">Ürün Adı</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Kategorisi</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row"><img src="~/ElitCafe//assets/images/@item.Picture" style="width:65px; height:65px;" /></th>
                <th scope="row">@item.Name</th>
                <td>@item.Description.Substring(0,30)..</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td><a href="/Product/ProductDelete/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Product/ProductUpdate/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

