@model List<Product>

<article id='tabs-5'>
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                @foreach (var item in Model)
               {
                    <div class="col-lg-6">
                        <div class="tab-item">
                            <img src="~/ElitCafe/assets/images/@item.Picture" alt="">
                            <h4>@item.Name</h4>
                            <p>@item.Description</p>
                            <div class="price">
                                <h6>@item.Price TL</h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</article>