@model Contact
@{
    ViewData["Title"] = "ContactUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="Contact" asp-action="ContactUpdate" method="post" style="width:100%">
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        <label for="exampleFormControlInput1">Telefon 1</label>
        <input asp-for="Phone1" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Telefon numaranızı giriniz..">
        <span asp-validation-for="Phone1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Telefon 2</label>
        <input asp-for="Phone2" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Telefon numaranızı giriniz..">
        <span asp-validation-for="Phone2" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">Email Adresi</label>
        <input asp-for="Email" type="email" class="form-control" id="exampleFormControlInput1" placeholder="Email adresinizi giriniz..">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleFormControlInput1">İşletme Adresi</label>
        <input asp-for="Address" type="text" class="form-control" id="exampleFormControlInput1" placeholder="İşletme adresinizi giriniz..">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <button class="btn btn-success">Güncelle</button>
</form>
