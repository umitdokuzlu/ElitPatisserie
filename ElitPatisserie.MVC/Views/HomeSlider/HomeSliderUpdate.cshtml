@model HomeSlider
@{
    ViewData["Title"] = "HomeSliderUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="HomeSlider" asp-action="HomeSliderUpdate" enctype="multipart/form-data" method="post" style="width:100%">
    @Html.HiddenFor(x=>x.Id)
    <div class="form-group">
        <label class="form-label">Ürün Resmi</label>
        <input asp-for="Picture" class="form-control" required type="file" id="formFile">
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
    <button class="btn btn-success">Güncelle</button>
</form>
