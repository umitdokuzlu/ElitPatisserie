@model List<HomeSlider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Ana Sayfa Slider Resimleri:</h1>
    <a href="/HomeSlider/HomeSliderAdd/" class="btn btn-success" style="margin-left:10px;">Yeni Resim Ekle</a><br />

</div>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Resim</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row"><img src="~/ElitCafe/assets/images/@item.Picture" style="width:65px; height:65px;" /></th>
                <td><a href="/HomeSlider/HomeSliderDelete/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/HomeSlider/HomeSliderUpdate/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<span>UYARI! Bu sayfada en az bir adet resim olmak zorundadır</span>

